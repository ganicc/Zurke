<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel="stylesheet" href="../stilovi/style.css">
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.6.0/dist/leaflet.css"
    integrity="sha512-xwE/Az9zrjBIphAcBb3F6JVqxf46+CDLwfLMHloNu6KEQCAWi6HcDUbeOfBIptF7tcCzusKFjFw2yuvEpDL9wQ=="
    crossorigin=""/>
    <script src="https://unpkg.com/leaflet@1.6.0/dist/leaflet.js"
    integrity="sha512-gZwIG9x3wUXg2hdXF6+rVkLF/0Vi9U8D2Ntg4Ga5I5BZpVkVxlJWbSQtXPSiUTtC0TjtGOmxa1AJPuV0CPthew=="
    crossorigin=""></script>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
    <style type="text/css">
        i
        { 
          color: rgb(123, 234, 174) 
        }
        #isMap
        {
          height: 350px;
          width: 100%;
        }
    </style>

  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top">
    
        <a class="navbar-brand" href="#">Kucne zurke</a>
 
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
    
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav mr-auto">
           
            <li class="nav-item">
             <a class="nav-link" href="/dashboard">Pocetna</a>
           </li>
          
        </ul>
        <form class="form-inline my-2 my-lg-0">
         <a href="/users/logout" class="btn btn-secondary">Odjava</a>
       </form>
        </div>
       </nav>
       <div id="row" class="topdiv">
        <div id="row" class="filterdiv">   
          <form action="/users/filterkorisnika" method="POST">
            <div style="margin-left: 5%;"><button type="submit" style="float: left;" class="btn btnnovi btn-primary">Pronađi korisnika po korisničkom imenu: </button></form>
              <input name="ime_korisnika" ,style="margin-left: 5%;" ></input>
            </form>
        </div>
       <!--PrikazKorisnika-->
       <div class="korisnici">
       <% users.forEach(function(users){ %>
        <form action="/users/delete" method="POST">
        <div class="list-group">
            <a href="#" class="list-group-item list-group-item-action">
              <div class="d-flex w-100 justify-content-between">
                <h5 class="mb-1">Informacije o korisniku</h5>
                <small class="text-muted">Datum prijavljivaja: <%=users.date.getDate()%>.<%=users.date.getMonth()%>.<%=users.date.getFullYear()%>.</small>
              </div>
              <p class="mb-1">Korisničko ime: <%=users.name%></br>Email: <%=users.email%></p>
              <input class="nevidljivo" name="id" value="<%=users._id%>"></input>
             <%-include("./partials/brisi.ejs")%>
            </form>
          </a>
            <form action="/users/pozovi" method="POST"> 
              <a href="#" class="list-group-item list-group-item-action">
              <input class="nevidljivo" name="korisnik" value="<%=name%>"></input>
              <input class="nevidljivo" name="name" value="<%=users.name%>"></input>
              <input class="nevidljivo" name="id" value="<%=users._id%>"> </input>
              <button 
               type="submit" style="float: right" class="btn btnnovi btn-primary">Pozovi korisnika na svoj događaj
              </button>
            </form>
          
          
          </a> 
          </div>
        
    
        <% }); %> 
    </div>
  
  </body>
</html>
