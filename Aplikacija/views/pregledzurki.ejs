        <input class="nevidljivo" name="name" value="<%=zurka.organizator%>"></input>
        <button type="submit" style="background-color: #ffcccc;"class="btn btn-primary btn-block">Odazovi se</button> 
      </div>
      <div class="card-footer text-muted">
        <%=zurka.datum%>
      </div>
