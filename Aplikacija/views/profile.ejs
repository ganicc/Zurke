<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <link rel="stylesheet" href="../stilovi/style.css" />
    <!-- Bootstrap CSS -->
    <script
      src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"
      type="text/javascript"
    ></script>
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
      integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top">
      <a class="navbar-brand" href="#">Kućne žurke</a>

      <button
        class="navbar-toggler"
        type="button"
        data-toggle="collapse"
        data-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <a class="nav-link" href="/dashboard">Početna</a>
          </li>
        </ul>
        <form class="form-inline my-2 my-lg-0">
          <a href="/users/logout" class="btn btn-secondary">Odjavi se</a>
        </form>
      </div>
    </nav>
    <div class="glavniDivProfila">
      <div class="card" style="width: 18rem;">
        <img
          src="https://cdn0.iconfinder.com/data/icons/social-media-network-4/48/male_avatar-512.png"
          class="card-img-top"
          alt="..."
        />
        <div class="card-body">
          <h5 class="card-title"><%= name %></h5>
          <p class="card-text"><%=email%></p>
          <a class="card-text"
            >Datum prijave: <%= date.getDate() %>.<%= date.getMonth()
            %>.<%=date.getFullYear()%>.</a
          >
          <p></p>
          <a href="#" id="myRef1" class="card-link">Promeni šifru</a>
          <p></p>
          <a href="#" id="myRef2" class="card-link">Promeni ime</a>
        </div>
      </div>
      <div id="row1" class="row1"></div>
    </div>

    <script>
      var $row1 = $("#row1");
      $("#myRef2").click(function () {
        $row1.load("/_form_changeusername");
      });

      var $row1 = $("#row1");
      $("#myRef1").click(function () {
        $row1.load("/_form_changepassword");
      });
    </script>
  </body>
</html>
